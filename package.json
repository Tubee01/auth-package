{
  "name": "nestjs-session-auth-package",
  "version": "1.0.0",
  "description": "Auth package for express session based authentication",
  "repository": "https://github.com/Tubee01/auth-package.git",
  "author": "Bence Tamási <[email protected]>",
  "license": "MIT",
  "readmeFilename": "README.md",
  "main": "dist/index.js",
  "files": [
    "dist/**/*",
    "*.md"
  ],
  "publishConfig": {
    "@tubee01:registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "start:dev": "tsc -w",
    "build": "tsc",
    "prepare": "npm run build",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "keywords": [
    "nestjs",
    "auth",
    "express",
    "session",
    "passport"
  ],
  "peerDependencies": {
    "@nestjs/config": "^2.2.0",
    "@nestjs/swagger": "^6.1.2",
    "@nestjs/common": "^9.1.5",
    "@nestjs/passport": "^9.0.0",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "express-session": "^1.17.3"
  },
  "devDependencies": {
    "@nestjs/common": "^9.1.5",
    "@nestjs/core": "^9.1.5",
    "@nestjs/platform-express": "^9.1.5",
    "@nestjs/testing": "9.1.5",
    "@types/express": "4.17.14",
    "@types/express-session": "^1.17.5",
    "@types/jest": "29.2.0",
    "@types/node": "18.11.3",
    "@types/passport-local": "^1.0.34",
    "@types/supertest": "2.0.12",
    "jest": "29.2.1",
    "prettier": "2.7.1",
    "supertest": "6.3.0",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "tsc-watch": "5.0.3",
    "tsconfig-paths": "4.1.0",
    "tslint": "5.20.1",
    "typescript": "4.8.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "dependencies": {}
}